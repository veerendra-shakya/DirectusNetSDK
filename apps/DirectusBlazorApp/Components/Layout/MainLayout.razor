@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <h5>Directus.Net Demo</h5>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/login">
                    <span class="bi bi-lock-fill-nav-menu" aria-hidden="true"></span> Login
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/dashboard">
                    <span class="bi bi-grid-fill-nav-menu" aria-hidden="true"></span> Dashboard
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/items">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Items
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/about">
                    <span class="bi bi-info-circle-fill-nav-menu" aria-hidden="true"></span> About
                </a>
            </div>
        </nav>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://data.gwaliorsmartcity.org" target="_blank">Directus Instance</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }

    .sidebar {
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
    }

    .top-row {
        background-color: #f7f7f7;
        border-bottom: 1px solid #d6d5d5;
        justify-content: flex-end;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .top-row a {
        margin-left: 1.5rem;
        text-decoration: none;
    }

    .content {
        padding-top: 1.1rem;
    }

    .nav-item {
        font-size: 0.9rem;
        padding-bottom: 0.5rem;
    }

    .nav-item a {
        color: #d7d7d7;
        display: block;
        padding: 0.5rem 1rem;
    }

    .nav-item a:hover {
        background-color: rgba(255,255,255,0.1);
        color: white;
    }

    @@media (min-width: 641px) {
        .page {
            flex-direction: row;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: sticky;
            top: 0;
        }

        .top-row {
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .content {
            max-width: 1200px;
        }
    }
</style>
