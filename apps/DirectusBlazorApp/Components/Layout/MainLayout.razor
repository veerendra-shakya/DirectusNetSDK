
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <nav class="flex-column">
            <div class="nav-item px-3 py-3">
                <h5 class="text-white mb-0">Directus.Net Demo</h5>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/">
                    <i class="bi bi-house-door-fill me-2"></i> Home
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/login">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/dashboard">
                    <i class="bi bi-grid-fill me-2"></i> Dashboard
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/items">
                    <i class="bi bi-list-ul me-2"></i> Items
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/about">
                    <i class="bi bi-info-circle-fill me-2"></i> About
                </a>
            </div>
        </nav>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://data.gwaliorsmartcity.org" target="_blank" class="text-decoration-none">
                <i class="bi bi-globe me-1"></i> Directus Instance
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
    }

    .sidebar {
        background: linear-gradient(180deg, #1e3a8a 0%, #4c1d95 100%);
    }

    .top-row {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        justify-content: flex-end;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .top-row a {
        margin-left: 1.5rem;
        color: #495057;
    }

    .top-row a:hover {
        color: #0d6efd;
    }

    .content {
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }

    .nav-item {
        font-size: 0.95rem;
        padding-bottom: 0.25rem;
    }

    .nav-item a {
        color: rgba(255, 255, 255, 0.85);
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        transition: all 0.2s;
    }

    .nav-item a:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        text-decoration: none;
    }

    @@media (min-width: 641px) {
        .page {
            flex-direction: row;
        }

        .sidebar {
            width: 260px;
            min-height: 100vh;
            position: sticky;
            top: 0;
        }

        .top-row {
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .content {
            max-width: 1400px;
        }
    }
</style>
