@inherits LayoutComponentBase
@using DirectusBlazorApp.Services
@inject DirectusAuthService AuthService
@inject NavigationManager Navigation

@if (isAuthenticating)
{
    <div class="auth-loading">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Checking authentication...</span>
        </div>
    </div>
}
else if (!isAuthenticated)
{
    <div class="auth-error">
        <h3>Authentication Required</h3>
        <p>Redirecting to login...</p>
    </div>
}
else
{
<div class="dashboard-container">
    <aside class="dashboard-sidebar">
        <div class="sidebar-header">
            <h4>Directus.Net</h4>
        </div>
        
        <nav class="sidebar-nav">
            <NavLink class="nav-item" href="/dashboard" Match="NavLinkMatch.All">
                <span class="nav-icon">üìä</span>
                <span class="nav-text">Dashboard</span>
            </NavLink>
            
            <NavLink class="nav-item" href="/profile">
                <span class="nav-icon">üë§</span>
                <span class="nav-text">Profile</span>
            </NavLink>
            
            <NavLink class="nav-item" href="/items">
                <span class="nav-icon">üì¶</span>
                <span class="nav-text">Items</span>
            </NavLink>
            
            <NavLink class="nav-item" href="/settings">
                <span class="nav-icon">‚öôÔ∏è</span>
                <span class="nav-text">Settings</span>
            </NavLink>
            
            <button class="nav-item logout-btn" @onclick="HandleLogout">
                <span class="nav-icon">üö™</span>
                <span class="nav-text">Logout</span>
            </button>
        </nav>
    </aside>

    <div class="dashboard-main">
        <header class="dashboard-header">
            <div class="header-content">
                <div class="header-right">
                    <UserInfo />
                </div>
            </div>
        </header>

        <main class="dashboard-content">
            @Body
        </main>
    </div>
</div>
}

@code {
    private bool isAuthenticating = true;
    private bool isAuthenticated = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        try
        {
            await Task.Delay(100);
            isAuthenticated = await AuthService.IsAuthenticatedAsync();
            
            if (!isAuthenticated)
            {
                Navigation.NavigateTo("/login");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Authentication check error: {ex.Message}");
            Navigation.NavigateTo("/login");
        }
        finally
        {
            isAuthenticating = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}

