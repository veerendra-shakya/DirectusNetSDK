@page "/dashboard"
@rendermode InteractiveServer
@using Directus.Net.Abstractions
@inject IDirectusClient DirectusClient
@inject NavigationManager Navigation
@layout DashboardLayout

<PageTitle>Dashboard</PageTitle>

<div class="dashboard-overview">
    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading dashboard...</p>
        </div>
    }
    else if (currentUser != null)
    {
        <div class="welcome-banner">
            <h1>Welcome back, @GetUserName()! üëã</h1>
            <p>Here's what's happening with your Directus instance.</p>
        </div>

        <div class="dashboard-grid">
            <div class="stat-card">
                <div class="stat-icon">üë§</div>
                <div class="stat-content">
                    <div class="stat-label">User ID</div>
                    <div class="stat-value">@currentUser.Id</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">‚úâÔ∏è</div>
                <div class="stat-content">
                    <div class="stat-label">Email</div>
                    <div class="stat-value">@currentUser.Email</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üîê</div>
                <div class="stat-content">
                    <div class="stat-label">Role</div>
                    <div class="stat-value">@(currentUser.Role ?? "No role")</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    @if (currentUser.Status == "active")
                    {
                        <span>‚úÖ</span>
                    }
                    else
                    {
                        <span>‚ö†Ô∏è</span>
                    }
                </div>
                <div class="stat-content">
                    <div class="stat-label">Status</div>
                    <div class="stat-value">@(currentUser.Status ?? "Unknown")</div>
                </div>
            </div>
        </div>

        <div class="quick-actions">
            <h3>Quick Actions</h3>
            <div class="action-grid">
                <a href="/profile" class="action-card">
                    <span class="action-icon">üë§</span>
                    <span class="action-title">View Profile</span>
                    <span class="action-description">Manage your account</span>
                </a>

                <a href="/items" class="action-card">
                    <span class="action-icon">üì¶</span>
                    <span class="action-title">Browse Items</span>
                    <span class="action-description">Explore collections</span>
                </a>

                <a href="/settings" class="action-card">
                    <span class="action-icon">‚öôÔ∏è</span>
                    <span class="action-title">Settings</span>
                    <span class="action-description">Configure app</span>
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="error-state">
            <h3>Unable to Load Dashboard</h3>
            <p>Please try logging in again.</p>
            <a href="/login" class="btn btn-primary">Go to Login</a>
        </div>
    }
</div>

@code {
    private DirectusUser? currentUser;
    private bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        try
        {
            isLoading = true;
            StateHasChanged();
            
            await Task.Delay(100);
            
            currentUser = await DirectusClient.Users.GetMeAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user: {ex.Message}");
            Navigation.NavigateTo("/login");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetUserName()
    {
        if (currentUser == null) return "User";
        
        var fullName = $"{currentUser.FirstName} {currentUser.LastName}".Trim();
        return string.IsNullOrEmpty(fullName) ? (currentUser.Email?.Split('@')[0] ?? "User") : fullName;
    }
}

