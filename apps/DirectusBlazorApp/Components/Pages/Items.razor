@page "/items"
@rendermode InteractiveServer
@using Directus.Net.Abstractions
@using Directus.Net.Models
@using DirectusBlazorApp.Models
@using System.Text.Json
@inject IDirectusClient DirectusClient
@layout DashboardLayout

<PageTitle>Items Browser</PageTitle>

<div class="items-page">
    <div class="page-header">
        <h2>Items Browser</h2>
        <p>Explore and query items from Directus collections</p>
    </div>

    <div class="query-panel">
        <EditForm Model="@queryModel" OnValidSubmit="LoadItemsAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="alert alert-danger" />
            
            <div class="form-row">
                <div class="form-group flex-grow-1">
                    <label for="collection" class="form-label">Collection Name</label>
                    <InputText id="collection" 
                               @bind-Value="queryModel.CollectionName" 
                               class="form-control" 
                               placeholder="Enter collection name (e.g., articles)"
                               autocomplete="off" />
                    <ValidationMessage For="@(() => queryModel.CollectionName)" class="text-danger" />
                </div>

                <div class="form-group">
                    <label for="limit" class="form-label">Limit</label>
                    <InputNumber id="limit" 
                                 @bind-Value="queryModel.Limit" 
                                 class="form-control"
                                 autocomplete="off" />
                    <ValidationMessage For="@(() => queryModel.Limit)" class="text-danger" />
                </div>

                <div class="form-group align-self-end">
                    <button type="submit" class="btn btn-primary" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>üîç Load Items</span>
                        }
                    </button>
                </div>
            </div>
        </EditForm>
    </div>

    @if (isLoading)
    {
        <div class="loading-panel">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading items from @queryModel.CollectionName...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <strong>‚ö†Ô∏è Error:</strong> @errorMessage
        </div>
    }
    else if (items != null)
    {
        <div class="results-panel">
            <div class="results-header">
                <h3>Found @items.Length item(s) in '@queryModel.CollectionName'</h3>
            </div>

            <div class="items-grid">
                @foreach (var item in items)
                {
                    <div class="item-card">
                        <pre>@JsonSerializer.Serialize(item, new JsonSerializerOptions { WriteIndented = true })</pre>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private ItemsQueryModel queryModel = new()
    {
        CollectionName = "articles",
        Limit = 10
    };
    private object[]? items;
    private string? errorMessage;
    private bool isLoading;

    private async Task LoadItemsAsync()
    {
        isLoading = true;
        errorMessage = null;
        items = null;

        try
        {
            if (string.IsNullOrWhiteSpace(queryModel.CollectionName))
            {
                errorMessage = "Collection name cannot be empty";
                return;
            }

            var query = new QueryBuilder()
                .Limit(queryModel.Limit)
                .Build();

            var response = await DirectusClient.Items.ReadItemsAsync<Dictionary<string, object>>(
                queryModel.CollectionName.Trim(), 
                query);
            
            items = response.Data;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load items: {ex.Message}";
            Console.WriteLine($"Error loading items: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}

