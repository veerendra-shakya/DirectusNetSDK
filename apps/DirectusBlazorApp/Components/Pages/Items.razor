@page "/items"
@using Directus.Net.Abstractions
@using Directus.Net.Models
@using DirectusBlazorApp.Models
@using System.Text.Json
@inject IDirectusClient DirectusClient

<PageTitle>Items Browser</PageTitle>

<h1>Items Browser</h1>

<div class="card mb-4">
    <div class="card-body">
        <EditForm Model="@queryModel" OnValidSubmit="LoadItemsAsync">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />
            
            <div class="mb-3">
                <label for="collection" class="form-label">Collection Name</label>
                <InputText id="collection" 
                           @bind-Value="queryModel.CollectionName" 
                           class="form-control" 
                           placeholder="Enter collection name (e.g., articles)"
                           autocomplete="off" />
                <ValidationMessage For="@(() => queryModel.CollectionName)" class="text-danger" />
                <small class="form-text text-muted">Enter the name of a Directus collection to browse its items</small>
            </div>

            <div class="mb-3">
                <label for="limit" class="form-label">Item Limit</label>
                <InputNumber id="limit" 
                             @bind-Value="queryModel.Limit" 
                             class="form-control"
                             autocomplete="off" />
                <ValidationMessage For="@(() => queryModel.Limit)" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Loading...</span>
                }
                else
                {
                    <span>Load Items</span>
                }
            </button>
        </EditForm>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading items...</p>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @errorMessage
    </div>
}
else if (items != null)
{
    <div class="alert alert-success">
        Found @items.Length item(s) in collection '@queryModel.CollectionName'
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>JSON Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    <tr>
                        <td>
                            <pre class="mb-0">@JsonSerializer.Serialize(item, new JsonSerializerOptions { WriteIndented = true })</pre>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private ItemsQueryModel queryModel = new()
    {
        CollectionName = "articles",
        Limit = 10
    };
    private object[]? items;
    private string? errorMessage;
    private bool isLoading;

    private async Task LoadItemsAsync()
    {
        isLoading = true;
        errorMessage = null;
        items = null;

        try
        {
            if (string.IsNullOrWhiteSpace(queryModel.CollectionName))
            {
                errorMessage = "Collection name cannot be empty";
                return;
            }

            var query = new QueryBuilder()
                .Limit(queryModel.Limit)
                .Build();

            var response = await DirectusClient.Items.ReadItemsAsync<Dictionary<string, object>>(
                queryModel.CollectionName.Trim(), 
                query);
            
            items = response.Data;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load items: {ex.Message}";
            Console.WriteLine($"Error loading items: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
